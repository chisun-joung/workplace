<!DOCTYPE html>
<html ng-app="exampleApp">
<head>
	<title>TODO</title>
	<link href="bootstrap.css" rel="stylesheet" />
	<link href="bootstrap-theme.css" rel="stylesheet" />
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.9/angular.js"></script>
	<script type="text/javascript">
		angular.module('exampleApp',[])
		.controller('defaultCtrl', ['$scope',function($scope){
			$scope.data = {mode:'List'};
			
			$scope.value = "List";

			$scope.todos = [
				{action:'Get groceries', complate:false},
				{action:'Call plumber', complate:false},
				{action:'Buy running shose', complate:true},
				{action:'Buy flowers', complate:false},
				{action:'Call family', complate:false}
			]

		}]);
	</script>
</head>
<body>
	<div id="todoPanel" class="panel" ng-controller="defaultCtrl">
		<h3 class="panel-header">To Do List</h3>

		<div class="well">
			<div class="radio" ng-repeat="button in ['None', 'Table', 'List']">
				<label>
					<input type="radio" value="{{button}}" ng-model="data.mode">
					{{button}} {{data.mode}}
				</label>
			</div>
		</div>

		<div ng-switch="data.mode">
			<!-- Table -->
			<div ng-switch-when="Table">
				<table class="table">
					<thead>
						<tr>
							<th>Action</th>
							<th>Done</th>
						</tr>
					</thead>
					<tbody>
						<tr ng-repeat="item in todos">
							<td ng-repeat="prop in item">{{prop}}</td>
						</tr>
					</tbody>
				</table>
			</div>

			<!-- List -->
			<div ng-switch-when="List">
				<ol>
					<li ng-repeat="item in todos">
						{{item.action}}
						<span ng-if="item.complete"> (Done)</span>
					</li>
				</ol>
			</div>

			<!-- Another -->
			<div ng-switch-default>
				Select another option to display a layout
			</div>

		</div>

	</div>



	
</body>
</html>