<!DOCTYPE html>
<html ng-app="app">
<head>
	<meta charset="UTF-8">
	<title>Service</title>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.9/angular.js"></script>
	<link href="bootstrap.css" rel="stylesheet" />
	<link href="bootstrap-theme.css" rel="stylesheet" />
	<script type="text/javascript">
	
		var demo = angular.module('demo',[]);
		demo.constant('name', 'Hong');
		demo.constant('user', {
			age: 30,
			address: 'Seoul',
			getInfo: function(){
				return this.age + " : " + this.address;
			}
		});
		demo.service('demoService',['name','user',function(name, user){
			var jumsu = [10,20,30,0,0];
			this.userName = name;
			this.user = user;
			var setKor = function(kor){
				jumsu[0] = kor;
			}
			this.getKor = function(){
				return jumsu[0];
			}
			this.getTotal = function(){
				jumsu[3] = jumsu[0] + jumsu[1] + jumsu[2];
				return jumsu[3];
			}
			this.getAvg = function(){
				jumsu[4] = jumsu[3] /3 ;
				return jumsu[4];
			}
		
		}]);
		
		var app = angular.module('app', ['demo']);
		app.controller('mainCtrl', ['$scope', 'demoService',function ($scope, demoService) {
			$scope.name = demoService.name;
			$scope.user = demoService.user;
			$scope.kor = demoService.getKor();
			$scope.total = demoService.getTotal();
			$scope.avg = demoService.getAvg();
			
			$scope.change = function() {
				$scope.user.age = 100;
				$scope.name = "허준";
				$scope.total = 300;
			}
			
		}])
	</script>
</head>
<body>

	<div class="panel panel-default">
		<div class="panel-heading">
			<h3>
				Custeom Service
				<span class="label label-primary">Factory</span>
			</h3>
		</div>


		<div class="panel-body" ng-controller="mainCtrl">
			<div>{{name}}</div>
			<div>{{user}}</div>
			<div>{{kor}}</div>
			<div>{{total}}</div>
			<div>{{avg}}</div>
			<div></div>
			<button class="btn btn-primary" ng-click="change()">Click</button>
		</div>
		
		
		<div class="panel-body" ng-controller="mainCtrl">
			<div>{{name}}</div>
			<div>{{user}}</div>
			<div>{{kor}}</div>
			<div>{{total}}</div>
			<div>{{avg}}</div>
			<div></div>
			
		</div>
	</div>
	
</body>
</html>